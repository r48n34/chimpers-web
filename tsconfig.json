{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "outDir": "./dist",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "test",
        "node_modules",
        "test-data",
        "dist",
        "build",
        "scripts",
        "index.js"
    ]
}